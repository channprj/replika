{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
	attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}
<link rel="stylesheet" type="text/css" href="{{asset "css/prism.css"}}" />
<link rel="stylesheet" type="text/css" href="{{asset "css/bigfoot-number.css"}}" />

<script type="text/javascript" src="{{asset "js/bigfoot.min.js"}}"></script>
<script type="text/javascript" src="{{asset "js/prism.js"}}"></script>
<script type="text/javascript">$.bigfoot();</script>

<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
	<nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
		{{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
		{{#if @blog.navigation}}
			<a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
		{{/if}}
	</nav>
</header>

<main class="content" role="main">
	<article class="{{post_class}}">

		<header class="post-header">
			<h1 class="post-title">{{title}}</h1>
		</header>

		<section class="post-content">
			{{content}}
			<center><div class="fb-like" data-href="./" data-layout="button_count" data-action="like" data-size="large" data-show-faces="false" data-share="true"></div></center>
		</section>

	</article>
</main>
{{/post}}
